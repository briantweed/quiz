{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@components/*": ["app/components/*"],
            "@layouts/*": ["app/components/layouts/*"],
            "@content/*": ["app/components/views/*"],
            "@wrappers/*": ["app/components/wrappers/*"],
            "@variants/*": ["app/variants/*"],
            "@store/*": ["app/store/*"],
            "@constants": ["app/constants/"],
            "@api/*": ["app/hooks/api/*"]
        }
    },
    "exclude": ["node_modules"]
}
